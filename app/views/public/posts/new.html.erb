<h2 class="text-center mt-4 mb-3">新規投稿</h2>

<%= form_with(model: @post, local: true) do |f| %>

  <%= render 'errors', object: @post %>

  <div class="container d-flex justify-content-center">
    <div class="col-12 col-md-8">
    
      <div class="row mb-3">
        <div class="col-12">
          <%= f.label :image, '画像（任意）', class: 'form-label' %>
          <%= f.file_field :image, class: 'form-control' %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-12">
          <%= f.label :title, 'タイトル', class: 'form-label' %>
          <%= f.text_field :title, class: 'form-control', placeholder: '30文字以内で入力してください' %>
        </div>
      </div>
      
      <div class="row mb-3">
        <div class="col-12">
          <%= f.label :body, '本文', class: 'form-label' %>
          <%= f.text_area :body, class: 'form-control', rows: 3, placeholder: '200文字以内で入力してください' %>
        </div>
      </div>
    

      <div class="row mb-3">
        <div class="col-12 d-flex justify-content-between">
          <%= f.submit '投稿', class: 'btn btn-primary' %>
          <%= link_to '戻る', root_path, class: 'btn btn-secondary' %>
        </div>
      </div>

    </div>
  </div>
<% end %>




