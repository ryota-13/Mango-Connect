<h2>新規投稿</h2>

<%= form_with(model: @post, local: true) do |f| %>
  <div>
    <%= f.label :image, '画像（任意）' %><br>
    <%= f.file_field :image %>
  </div>
  
  <div>
    <%= f.label :title, 'タイトル' %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, '本文' %><br>
    <%= f.text_area :body %>
  </div>


  <div>
    <%= f.submit '投稿', class: 'btn btn-primary' %>
    <%= link_to '戻る', root_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
