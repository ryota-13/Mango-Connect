<h2 class="mb-4 text-center">検索結果</h2>

<% if @records.present? %>
  <h3><%= @model == 'user' ? "ユーザー" : "投稿" %>の検索結果 for "<%= @content %>"</h3>
  
  <% if @model == 'user' %>
    <% @records.each do |user| %>
      <div class="mb-3 p-3 border rounded">
        <% if user.image.attached? %>
          <%= image_tag user.image, size: "100x100" %>
        <% end %>
        <p><strong>名前：</strong><%= link_to user.name, user_path(user) %></p>
      </div>
    <% end %>

  <% elsif @model == 'post' %>
    <% @records.each do |post| %>
      <div class="mb-3 p-3 border rounded">
        <% if post.image.attached? %>
          <%= image_tag post.image, size: "100x100" %>
        <% end %>
        <p><strong>タイトル：</strong><%= link_to post.title, post_path(post) %></p>
        <p><%= truncate(post.body, length: 100) %></p>
      </div>
    <% end %>
  <% end %>
  
<% else %>
  <p class="text-center">一致する結果は見つかりませんでした。</p>
<% end %>


<div class="mt-3">
  <%= link_to 'トップページ', root_path, class: "btn btn-primary" %>
</div>
