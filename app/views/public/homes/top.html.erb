<h1>Mango Connect - トップページ</h1>

<!-- 新規投稿ボタン -->
<%= link_to '新規投稿', new_post_path, class: 'btn btn-primary' %>

<!-- マイページボタン -->
<% if current_user %>
  <%= link_to 'マイページ', mypage_path(current_user), class: 'btn btn-success' %>
<% end %>


<!-- 投稿一覧 -->
<h2>投稿一覧</h2>

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <% if post.image.attached? %>
          <%= image_tag post.image, class: 'card-img-top', style: 'width: 100%; height: 200px; object-fit: contain; background-color: #f8f9fa;' %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= truncate(post.body, length: 100) %></p>
          <p class="card-text"><strong>投稿者: </strong><%= post.user.name %></p>
          <p class="card-text"><small>投稿日: <%= post.created_at.in_time_zone("Asia/Tokyo").strftime("%Y年%m月%d日 %H:%M") %></small></p>
        </div>
        <div class="card-footer">
          <%= link_to '投稿詳細', post_path(post), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'ユーザー詳細', user_path(post.user), class: 'btn btn-secondary btn-sm' %>
        </div>
      </div>
    </div>
  <% end %>
</div>










