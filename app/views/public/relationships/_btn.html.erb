<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "フォローを外す", user_relationship_path(user), method: :delete, class: options[:class].presence || "btn btn-danger" %>
  <% else %>
    <%= link_to "フォローする", user_relationship_path(user), method: :post, class: options[:class].presence || "btn btn-primary" %>
  <% end %>
<% end %>
