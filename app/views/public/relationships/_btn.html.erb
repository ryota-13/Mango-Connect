<% if user_signed_in? && current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to user_relationships_path(user), method: :delete, class: "btn btn-outline-danger btn-sm" do %>
      <i class="fas fa-user-minus"></i> フォロー解除
    <% end %>
  <% else %>
    <%= link_to user_relationships_path(user), method: :post, class: "btn btn-outline-primary btn-sm" do %>
      <i class="fas fa-user-plus"></i> フォローする
    <% end %>
  <% end %>
<% end %>

