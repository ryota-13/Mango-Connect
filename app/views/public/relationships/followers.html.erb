<% if user_signed_in? %>
  <div class="container mt-4 mb-4">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <%= render 'public/searches/searches' %>
      </div>
    </div>
  </div>
<% end %>

<h2 class="text-center mt-4 mb-4">フォロワー一覧</h2>

<% if @followers.present? %>
  <table class="table table-bordered table-hover text-center">
    <thead>
      <tr>
        <th>プロフィール画像</th>
        <th>名前</th>
        <th>自己紹介</th>
      </tr>
    </thead>
    <tbody>
      <% @followers.each do |user| %>
        <tr>
          <td style="width: 120px;">
            <% if user.image.attached? %>
              <%= image_tag user.image, style: "width: 100px; height: 100px; object-fit: cover;" %>
            <% else %>
              <%= image_tag "no_image.jpg", style: "width: 100px; height: 100px; object-fit: cover;" %>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td><%= user.profile.presence || "自己紹介文がまだありません。" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-center">自分をフォローしているユーザーはまだいません。</p>
<% end %>


<div class="mt-4">
  <%= link_to 'マイページ', mypage_path, class: "btn btn-secondary" %>
  <%= link_to 'トップページ', root_path, class: "btn btn-primary" %>
</div>
