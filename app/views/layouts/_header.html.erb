<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <div class="container">
      <%= link_to 'Mango Connect', root_path, class: 'navbar-brand text-white' %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>  <!-- ユーザーログイン時 -->
            <li class="nav-item">
              <%= link_to raw('<i class="fa-solid fa-house"></i> トップページ'), root_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to raw('<i class="fa-solid fa-user"></i> マイページ'), mypage_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to raw('<i class="fa-solid fa-heart"></i> いいね一覧'), favorites_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to raw('<i class="fa-solid fa-right-from-bracket"></i> ログアウト'), destroy_user_session_path, method: :delete, class: 'nav-link text-white' %>
            </li>

          <% elsif admin_signed_in? %>  <!-- 管理者ログイン時 -->
            <li class="nav-item">
              <%= link_to 'ダッシュボード', admin_root_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to 'ユーザー一覧', admin_users_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to '投稿一覧', admin_posts_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to '管理者ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link text-white' %>
            </li>

          <% else %>  <!-- 未ログイン時 -->
            <li class="nav-item">
              <%= link_to raw('<i class="fa-solid fa-house"></i> トップページ'), root_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to raw('<i class="fa-solid fa-right-to-bracket"></i> ログイン'), new_user_session_path, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to raw('<i class="fa-solid fa-door-open"></i> ゲストログイン'), user_guest_sign_in_path, method: :post, class: 'nav-link text-white' %>
            </li>
            <li class="nav-item">
              <%= link_to raw('<i class="fa-solid fa-user-plus"></i> 新規登録'), new_user_registration_path, class: 'nav-link text-white' %>
            </li>
          <% end %>

          <li class="nav-item">
            <%= link_to raw('<i class="fa-solid fas fa-leaf"></i> アバウト'), about_path, class: 'nav-link text-white' %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

