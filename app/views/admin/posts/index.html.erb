<h2 class="text-center mb-4">投稿一覧</h2>

<div class="mb-3 text-end">
  <%= link_to 'ダッシュボードへ戻る', admin_root_path, class: 'btn btn-secondary' %>
</div>

<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100 shadow-sm">
        <% if post.image.attached? %>
          <%= image_tag post.image, class: 'card-img-top', style: 'width: 100%; height: 200px; object-fit: contain; background-color: #f8f9fa;' %>
        <% else %>
          <%= image_tag 'no_image.jpg', class: 'card-img-top', style: 'width: 100%; height: 200px; object-fit: contain; background-color: #f8f9fa;' %>
        <% end %>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= truncate(post.body, length: 100) %></p>
          <p class="card-text"><strong>投稿者:</strong> <%= link_to post.user.name, admin_user_path(post.user) %></p>
          <p class="card-text"><strong>コメント数:</strong> <%= post.comments.count %></p>
        </div>
        <div class="card-footer bg-white border-0 d-flex justify-content-between">
          <%= link_to '投稿詳細', admin_post_path(post), class: 'btn btn-outline-info btn-sm' %>
          <%= link_to 'ユーザー詳細', admin_user_path(post.user), class: 'btn btn-outline-primary btn-sm' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= paginate @posts %> 