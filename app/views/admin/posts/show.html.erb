<h2 class="text-center">投稿詳細</h2>

<div class="container d-flex justify-content-center">
  <div class="col-12 col-md-8">

    <% if @post.image.attached? %>
      <div class="mb-3 text-center">
        <%= image_tag @post.image, class: 'img-fluid mb-3' %>
      </div>
    <% end %>

    <p><strong>タイトル:</strong> <%= @post.title %></p>

    <p><strong>本文:</strong> <%= @post.body %></p>

    <p>
      <strong>投稿者:</strong>
      <%= link_to @post.user.name, admin_user_path(@post.user), class: 'text-decoration-none' %>
    </p>

    <p>
      <strong>投稿日:</strong> <%= @post.created_at.in_time_zone("Asia/Tokyo").strftime("%Y年%m月%d日 %H:%M") %>
    </p>

    <hr>

    <h4>コメント一覧</h4>
    <% if @post.comments.any? %>
      <ul class="list-group mb-3">
        <% @post.comments.each do |comment| %>
          <li class="list-group-item">
            <strong><%= comment.user.name %></strong>: <%= comment.content %>
            <br>
            <small class="text-muted"><%= comment.created_at.strftime("%Y年%m月%d日 %H:%M") %></small>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>コメントはまだありません。</p>
    <% end %>

    <div class="d-flex justify-content-between mt-4">
      <%= link_to '投稿一覧へ戻る', admin_posts_path, class: 'btn btn-secondary' %>
      <%= button_to '投稿を削除', admin_post_path(@post), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
    </div>

  </div>
</div>

