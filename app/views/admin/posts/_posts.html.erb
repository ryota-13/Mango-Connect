<div class="row">
  <% posts.each do |post| %>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
      <div class="card h-100 shadow-sm">
        <% if post.image.attached? %>
          <%= image_tag post.image, class: 'card-img-top', style: 'width: 100%; height: 200px; object-fit: contain;' %>
        <% end %>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= post.title %></h5>
          <p class="card-text"><%= post.body %></p>
          <p class="card-text"><strong>投稿者:</strong> <%= link_to post.user.name, admin_user_path(post.user) %></p>
          <p class="card-text"><strong>コメント数:</strong> <%= post.comments.count %></p>
          <p class="card-text"><strong>いいね数:</strong> <%= post.favorites.count %></p>
        </div>
        <div class="card-footer bg-white border-0 d-flex justify-content-between">
          <%= link_to '投稿詳細', admin_post_path(post), class: 'btn btn-outline-info btn-sm' %>
          <%= link_to '投稿削除', admin_post_path(post), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-outline-danger btn-sm' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center">
  <%= paginate posts %>
</div>


